    <define name="USE_1"/>
-->
    <configure name="AHRS_ALIGNER_LED" value="1"/>
    <configure name="CPU_LED" value="1"/>
    </target>

<!-- ******************* Simple SIM ******************************** -->
    <target name="sim" board="pc">
    </target>

<!-- additional defines -->
    <define name="AGR_CLIMB"/>
    <define name="LOITER_TRIM"/>
    <define name="ALT_KALMAN"/>
    <define name="TUNE_AGRESSIVE_CLIMB"/>
