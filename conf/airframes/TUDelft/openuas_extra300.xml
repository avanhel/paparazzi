<!-- To be able to Flash an u-blox gps with the floss jtag chip using u-center

You can use the floss jtag serial port to directly connect to the gps,
or if you don't want to make cables connect to the uart on lisa/m
while having the gps on the other uart.
Then you can flash the tunnel to the lisa (bridges uart1 and uart2).

-->
  <firmware name="setup">
    <target name="tunnel" board="lisa_m_2.0"/>
  </firmware>

<!-- Fixedwing Firmware -->
  <firmware name="fixedwing">
    <target name="ap" board="lisa_m_2.0">

  <!-- ONLY if flashing via JTAG cable -->
    <configure name="FLASH_MODE"   value="JTAG"/>
<!--     <configure name="NO_LUFTBOOT" value="1"/> -->
  <!-- *********************** -->

    <configure name="PERIODIC_FREQUENCY" value="120"/>
    <!--
    <configure name="AHRS_PROPAGATE_FREQUENCY" value="100"/>
    <configure name="AHRS_CORRECT_FREQUENCY" value="100"/>
    -->

    <define name="LISA_M_LONGITUDINAL_X"/>
    <!--
    <define name="AHRS_TRIGGERED_ATTITUDE_LOOP"/>
    -->
<!--
