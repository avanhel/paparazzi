      <configure name="MODEM_PORT" value="UART2"/>
      <configure name="MODEM_BAUD" value="B9600"/>
    </subsystem>

    <!-- Actuators -->
    <subsystem name="control"/>
    <!-- Sensors -->
    <subsystem name="navigation" type="extra"/>
